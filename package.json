{
  "name": "@ctrl/irc",
  "version": "0.0.0-placeholder",
  "description": "Node irc client in TypeScript",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/irc",
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "keywords": [
    "irc",
    "typescript"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:ci": "c8 --reporter=text --reporter=lcov ava"
  },
  "dependencies": {
    "chardet": "^1.4.0",
    "debug": "^4.3.3",
    "iconv-lite": "^0.6.3",
    "lodash.defaultsdeep": "^4.6.1",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "2.0.0",
    "@ctrl/eslint-config": "3.3.1",
    "@types/node": "17.0.14",
    "@types/debug": "4.1.7",
    "@types/lodash.defaultsdeep": "4.6.6",
    "@types/sinon": "10.0.9",
    "ava": "4.0.1",
    "c8": "7.11.0",
    "sinon": "13.0.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "ava": {
    "timeout": "10s",
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": "main"
  },
  "engines": {
    "node": ">=14.16"
  }
}
