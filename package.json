    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "3.4.4",
    "@sindresorhus/tsconfig": "3.0.1",
    "@types/debug": "4.1.7",
    "@types/lodash.defaultsdeep": "4.6.7",
    "@types/node": "17.0.40",
    "c8": "7.11.3",
    "typescript": "4.7.3",
    "vitest": "0.14.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": "main"
  },
  "engines": {
    "node": ">=14.16"
