{
  "name": "@ctrl/irc",
  "version": "0.0.0-placeholder",
  "description": "Node irc client in TypeScript",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/irc",
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "keywords": [
    "irc",
    "typescript"
  ],
  "scripts": {
    "lint:biome": "biome check src test",
    "lint:eslint": "eslint --ext .ts .",
    "lint": "npm run lint:biome && npm run lint:eslint",
    "lint:biome:fix": "biome check src test --apply",
    "lint:eslint:fix": "eslint --fix --ext .ts .",
    "lint:fix": "npm run lint:biome:fix && npm run lint:eslint:fix",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "dependencies": {
    "chardet": "^2.0.0",
    "debug": "^4.3.4",
    "iconv-lite": "^0.6.3",
    "lodash.defaultsdeep": "^4.6.1",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@ctrl/eslint-config-biome": "1.0.3",
    "@sindresorhus/tsconfig": "5.0.0",
    "@types/debug": "4.1.12",
    "@types/lodash.defaultsdeep": "4.6.9",
    "@types/node": "20.10.7",
    "@vitest/coverage-v8": "1.1.3",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vitest": "1.1.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
